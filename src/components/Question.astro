---
interface props {
  question: string;
}

const { question } = Astro.props as props;
---

<article class="overflow-hidden">
  <h2 class="p-4 text-primary-400 -skew-x-12 cursor-pointer">{question}</h2>
  <div class="content px-4 border-t border-gray-200">
    <div class="overflow-hidden">
      <p class="m-4 text-white/80">
        <slot />
      </p>
    </div>
  </div>
</article>

<style>
  .content {
    display: grid;
    grid-template-rows: 0fr;
    transition: 0.3s grid-template-rows ease-in-out;
  }

  article:hover .content {
    grid-template-rows: 1fr;
  }
</style>
